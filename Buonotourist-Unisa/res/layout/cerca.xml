<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
			   android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/body"  >

<LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal"
          android:background="@drawable/border_navbar_sfondo"
          android:padding="2dp"
          >
      <Button     
          android:textColor="@color/button_navbar_selected_text"
          android:textStyle="bold"
          style="@style/bottoniNavbar"
          android:id="@+id/idBottoniNavbar_Cerca"
          android:text="@string/tab1Selected" />
      <Button
          android:textColor="@color/button_navbar_text"
          style="@style/bottoniNavbar"
          android:id="@+id/idBottoniNavbar_Corse"
          android:text="@string/tab2" />
      <Button
		  android:textColor="@color/button_navbar_text"
          style="@style/bottoniNavbar"
          android:text="@string/tab3"
          android:id="@+id/idBottoniNavbar_Tariffe"
           />
      <Button
          android:textColor="@color/button_navbar_text"
          style="@style/bottoniNavbar"
          android:text="@string/tab4" 
          android:id="@+id/idBottoniNavbar_Lingua"
          />	
</LinearLayout>
<ScrollView  
android:id="@+id/scroll" 
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@color/body">
<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:gravity="center"
    	android:orientation="vertical"
    	android:background="@color/body">
    
    <TableLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/body"
           android:gravity="center">
        <TableRow
     			android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center" >
        	    <TextView
        	    	android:gravity="center"
        	    	android:textColor="#000000"
            		android:layout_width="match_parent"
            		android:layout_height="match_parent"
                	android:text="@string/da" />
         	   <Button
         		    android:textStyle="italic"
         		    android:textSize="15dp"
         	        android:textColor="@color/button_confirm_text"
         	   		android:text="@string/partenza" 
         	   		android:background="@drawable/bottoni_select_body_sfondo"
                	android:id="@+id/idBottoni_Provenienza" 
                	android:layout_width="match_parent"
                	android:layout_height="match_parent"
                	android:minWidth="180dp"
                	android:maxWidth="180dp"
                />
        </TableRow>
        <TableRow
     			android:orientation="horizontal"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_margin="15dp"
            	android:gravity="center" >
       			<TextView
       				android:gravity="center"
       				android:textColor="#000000"
            		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:text="@string/a" />
         		<Button
         		    android:textStyle="italic"
         		    android:textSize="15dp"
         		    android:textColor="@color/button_confirm_text"
         		    android:text="@string/destinazione"
         		    android:background="@drawable/bottoni_select_body_sfondo"
            		android:id="@+id/idBottoni_Destinazione"
            		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:minWidth="180dp"
                	android:maxWidth="180dp" />
         </TableRow>
         <TableRow
     			android:orientation="horizontal"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:gravity="center"
            	android:color="#000000"
            	 >
         		<TextView
         			android:gravity="center"
         			android:textColor="#000000"
                	android:layout_width="match_parent"
                	android:layout_height="match_parent"
                	android:text="@string/orario" />
        		<TimePicker
        		    android:id="@+id/idTimePicker_Orario"
                	android:layout_width="match_parent"
                	android:layout_height="match_parent" />
         </TableRow>
     </TableLayout>
     <LinearLayout
     			android:orientation="horizontal"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:background="@color/body"
        		android:gravity="center">
            	<Button
            		android:textColor="@color/button_confirm_text"
            		android:background="@drawable/bottoni_body_sfondo"
          			style="@style/bottoniConfirm"
            		android:text="@string/cerca" 
            		android:id="@+id/idBottoniFormCerca_Cerca"
            		/>	
        		<Button
        	    	android:textColor="@color/button_confirm_text"
        	    	android:background="@drawable/bottoni_body_sfondo"
          			style="@style/bottoniConfirm"
            		android:text="@string/annulla" 
            		android:id="@+id/idBottoniFormCerca_Annulla"
            		/>
      </LinearLayout>
</LinearLayout>
</ScrollView> 
</LinearLayout>