<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"  
android:id="@+id/scroll" 
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#F7D16A">
<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:gravity="center"
    	android:orientation="vertical"
    	android:background="@color/body">
    <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal"
          android:background="@color/navBar" >
      <Button     
          android:textColor="#704A1C"
          style="@style/bottoniNavbar"
          android:id="@+id/idBottoni_cerca"
          android:text="@string/tab1" />
      <Button
          android:textColor="@color/button_navbar"
          style="@style/bottoniNavbar"
          android:text="@string/tab2" />
      <Button
		  android:textColor="@color/button_navbar"
          style="@style/bottoniNavbar"
          android:text="@string/tab3" />
      <Button
          android:textColor="@color/button_navbar"
          style="@style/bottoniNavbar"
          android:text="@string/tab4" />
	
    </LinearLayout>
    <TableLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/body"
           android:gravity="center">
        <TableRow
     			android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp" >
        	    <TextView
        	    	android:textColor="#000000"
            		android:layout_width="match_parent"
            		android:layout_height="match_parent"
                	android:text="@string/da" />
         	    <Button
                	android:id="@+id/idBottoni_Provenienza" 
                	android:layout_width="match_parent"
                	android:layout_height="match_parent"
                />
        </TableRow>
        <TableRow
     			android:orientation="horizontal"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_margin="15dp" >
       			<TextView
       				android:textColor="#000000"
            		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:text="@string/a" />
         		<Button
            		android:id="@+id/idBottoni_Destinazione"
            		android:layout_width="match_parent"
            		android:layout_height="match_parent" />
         </TableRow>
         <TableRow
     			android:orientation="horizontal"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_margin="15dp" >
         		<TextView
         			android:textColor="#000000"
                	android:layout_width="match_parent"
                	android:layout_height="match_parent"
                	android:text="@string/orario" />
        		<TimePicker
        		    android:id="@+id/idTimePicker_Orario"
                	android:layout_width="match_parent"
                	android:layout_height="match_parent" />
         </TableRow>
     </TableLayout>
     <LinearLayout
     			android:orientation="horizontal"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:background="@color/body">
            	<Button
            		android:textColor="@color/button_confirm"
          			style="@style/bottoniConfirm"
            		android:text="@string/cerca" />	
        		<Button
        	    	android:textColor="@color/button_confirm"
          			style="@style/bottoniConfirm"
            		android:text="@string/annulla" />
      </LinearLayout>
</LinearLayout>
</ScrollView> 